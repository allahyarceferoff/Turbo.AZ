<UserControl x:Class="Turbo.az_app.Domain.Views.UserControls.CarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Turbo.az_app.Domain.Views.UserControls"
             mc:Ignorable="d" Height="343" Width="291" Margin="10">
    <Canvas>
        <Border Background="White" CornerRadius="10" Height="343" Width="291">

        </Border>
        <Button Command="{Binding SelectedCarCommand}" Background="Transparent" Height="343" Width="291"></Button>
        <Image Source="{Binding CarImagePath}" Height="172" Width="281" Canvas.Top="7" Canvas.Left="5" />
        <Label Content="{Binding CarPrice}" FontSize="32" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Top="191" VerticalAlignment="Center" Canvas.Left="9"></Label>
        <Label Content="{Binding CarModelBrandInfo}" FontSize="24"  HorizontalAlignment="Left" Canvas.Top="237" VerticalAlignment="Center" Canvas.Left="8"></Label>
        <Label Content="{Binding CarKmYearInfo}" FontSize="24"  HorizontalAlignment="Left" Canvas.Top="275" VerticalAlignment="Center" Canvas.Left="8"></Label>


    </Canvas>
</UserControl>
